{
  "name": "Filecoin Retrieval",
  "version": "0.0.1",
  "description": "A p2p network of Filecoin content retrievers",
  "permissions": ["storage"],
  "background": {
    "scripts": ["src/background/background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/images/filecoin-16x16.png",
      "32": "src/images/filecoin-32x32.png",
      "48": "src/images/filecoin-48x48.png",
      "128": "src/images/filecoin-128x128.png"
    }
  },
  "icons": {
    "16": "src/images/filecoin-16x16.png",
    "32": "src/images/filecoin-32x32.png",
    "48": "src/images/filecoin-48x48.png",
    "128": "src/images/filecoin-128x128.png"
  },
  "manifest_version": 2
}
