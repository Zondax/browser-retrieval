{
  "name": "filecoin-retrieval-extension",
  "version": "0.0.1",
  "description": "A p2p network of Filecoin content retrievers",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^6.0.0",
    "react-scripts": "3.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "autoprefixer": "^9.8.4",
    "postcss-cli": "^7.1.1",
    "tailwindcss": "^1.4.6",
    "webpack-cli": "^3.3.12"
  },
  "scripts": {
    "build:popup:css": "NODE_ENV=production postcss src/popup/styles/tailwind.css -o src/popup/styles/tailwind.generated.css",
    "build:popup:js": "INLINE_RUNTIME_CHUNK=false react-scripts build",
    "build:popup": "yarn build:popup:css && yarn build:popup:js",
    "build:background": "webpack",
    "build": "yarn build:popup && yarn build:background"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
